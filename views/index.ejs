<!DOCTYPE html>
<html>

<head>
  <title>Fake Instagram</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
  <header>
    <div class="container header">
      <div id="logo">
        <img src="/img/logo.png">
      </div>
      <div class="busca">
        <form>
          <input type="search" class="search" placeholder="buscar usuarios">
        </form>
      </div>
      <nav>
        <a href="/publicar">
          <img src="/img/icons/plus.svg" alt="Adicionar Publicação" title="Adicionar Publicação">
        </a>
        <a href="/home">
          <img src="/img/icons/home.svg">
        </a>
        <a href="">
          <div class="avatar-content">
            <img class="avatar" src="/img/avatar-example.png">
            <b>nati.carolira</b>
          </div>
        </a>
      </nav>
    </div>
  </header>
  <main class="container content">
    <% publications.forEach(publication => { %>
    <div class="card">
      <div class="card-header">
        <div>
          <img class="avatar" src="/img/avatar-example.png">
          <b><%= publication.User.name %></b>
        </div>
        <img src="/img/icons/more-vertical.svg">
      </div>
      <div class="card-img">
        <img src="/posts/<%= publication.image %>">
      </div>
      <div class="card-body">
        <div class="card-itens">
          <div class="likes">
            <a href="/publicacao/<%= publication.id %>/like"><img src="/img/icons/heart.svg"></a>
            <b><%= publication.like %> likes</b>
          </div>
          <b>Postado no dia: <%= moment(publication.create_at).format('DD/MM/YYYY') %></b>
        </div>
        <div class="card-comments">
          <% publication.Comments.forEach( comment => { %>
          <p><b><%= comment.User.username %></b> <%= comment.description %></p>
          <% }) %>
        </div>

      </div>
      <form class="form-comments" method="POST" action="/comentar/<%= publication.id %>">
        <input type="text" name="idPost" hidden value="<%= publication.id %>">
        <input type="text" name="description" placeholder="Adicione um comentário...">
        <button type="submit">Publicar</button>
      </form>
    </div>
    <% }) %>

  </main>
</body>

</html>